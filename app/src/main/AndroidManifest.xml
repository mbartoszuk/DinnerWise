<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bartoszuk.dinnerwise">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/DinnerWiseTheme">

        <activity android:name=".activity.week.WeekActivity" />

        <activity
            android:name=".activity.onboarding.OnboardingActivity"
            android:theme="@style/DinnerWiseTheme_noActionBar"/>

        <activity
            android:name=".activity.login.LoginActivity"
            android:theme="@style/DinnerWiseTheme_noActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.createaccount.CreateAccountActivity"
            android:theme="@style/DinnerWiseTheme_noActionBar"/>

        <activity
            android:name=".activity.fullrecipe.FullRecipeActivity"
            android:label="@string/fullRecipe_title"/>
    </application>

</manifest>
