<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context=".activity.secondarymenu.PreferencesActivity$PlaceholderFragment">

    <TextView
        android:id="@+id/foodgroups_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/foodgroups_label"
        android:textColor="@color/secondary_text"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@color/white" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"
        android:layout_alignBottom="@+id/foodgroups_label" />

    <ToggleButton
        android:id="@+id/button_foodgroup_meat"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:drawableLeft="@drawable/button_toggle_preference"
        android:textOn="  Meat"
        android:textOff="  No meat"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:background="@drawable/button_toggle_background"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="16dp"
        android:padding="8dp"
        android:layout_below="@+id/foodgroups_label" />

    <ToggleButton
        android:id="@+id/button_foodgroup_fish"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:drawableLeft="@drawable/button_toggle_preference"
        android:textOn="  Fish"
        android:textOff="  No fish"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:background="@drawable/button_toggle_background"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="8dp"
        android:padding="8dp"
        android:layout_below="@+id/foodgroups_label"
        android:layout_toRightOf="@+id/button_foodgroup_meat" />

    <ToggleButton
        android:id="@+id/button_foodgroup_eggs"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:drawableLeft="@drawable/button_toggle_preference"
        android:textOn="  Eggs"
        android:textOff="  No eggs"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:background="@drawable/button_toggle_background"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="16dp"
        android:padding="8dp"
        android:layout_below="@+id/button_foodgroup_meat" />

    <ToggleButton
        android:id="@+id/button_foodgroup_dairy"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:drawableLeft="@drawable/button_toggle_preference"
        android:textOn="  Dairy"
        android:textOff="  No dairy"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:background="@drawable/button_toggle_background"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="8dp"
        android:padding="8dp"
        android:layout_below="@+id/button_foodgroup_fish"
        android:layout_toRightOf="@+id/button_foodgroup_eggs" />

    <ToggleButton
        android:id="@+id/button_foodgroup_grains"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:drawableLeft="@drawable/button_toggle_preference"
        android:textOn="  Grains"
        android:textOff="  No grains"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:background="@drawable/button_toggle_background"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="16dp"
        android:padding="8dp"
        android:layout_below="@+id/button_foodgroup_eggs" />

    <ToggleButton
        android:id="@+id/button_foodgroup_nuts"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:drawableLeft="@drawable/button_toggle_preference"
        android:textOn="  Nuts"
        android:textOff="  No nuts"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:background="@drawable/button_toggle_background"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="8dp"
        android:padding="8dp"
        android:layout_below="@+id/button_foodgroup_dairy"
        android:layout_toRightOf="@+id/button_foodgroup_grains" />

</RelativeLayout>